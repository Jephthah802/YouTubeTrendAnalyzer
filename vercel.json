{
  "version": 2,
  "builds": [
    { "src": "frontend/**/*", "use": "@vercel/static" },
    { "src": "backend/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/index.js" },
    { "src": "/", "dest": "/frontend/home.html" },
    { "src": "/favorites", "dest": "/frontend/favorites.html" },
    { "src": "/playlists", "dest": "/frontend/playlists.html" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}